{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "types": [
      "@figma/plugin-typings",
      "@types/jest",
      "jest"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
